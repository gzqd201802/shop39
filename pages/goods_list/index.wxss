.tabs {
  height: 100rpx;
  display: flex;
  border-bottom: 1rpx solid #ddd;
}
.tabs-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tabs-item.active {
  color: #eb4450;
  font-weight: bold;
}
.product-item {
  display: flex;
  padding: 30rpx 0;
  margin: 0 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.product-item-left {
  width: 200rpx;
  height: 200rpx;
}
.product-item-right {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.product-name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.product-price {
  color: #eb4450;
  font-size: 34rpx;
}
.product-price::before {
  content: "ï¿¥";
  font-size: 80%;
}
